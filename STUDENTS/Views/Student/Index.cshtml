@model IEnumerable<STUDENTS.Models.Table>

@{
    ViewBag.Title = "Index";
}

<h2>STUDENT LIST</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OgrAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OgrAdres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OgrAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OgrAdres)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OgrID }, new { @class = "btn btn-success" }) &nbsp;&nbsp;
            @Html.ActionLink("Details", "Details", new { id = item.OgrID }, new { @class = "btn btn-primary" })&nbsp;&nbsp;
            @Html.ActionLink("Delete", "Delete", new { id = item.OgrID }, new { @class = "btn btn-danger" })&nbsp;&nbsp;
        </td>
    </tr>
}

</table>
